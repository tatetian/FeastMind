<div class="container">
  <div class="wrapper">
        <div class="login ">
          
            <div class="login-form-wrapper">
            <%= form_tag("/sessions", :method => "post") do %>
              <p style="margin-left:10px; float:left;">
                <span>
                  <%= text_field_tag("session[email]", "" ,:placeholder => "Email",:class=>"field") %>
                </span><br />
                <span style="float:left; color:rgba(255,255,255,0.7); font-size:14px;">
                  <%= check_box_tag(:remember_me, "remember", true,:style=>"height:16px; width:16px; margin-top:15px;") %>
                  Remember Me
                </span><br />
              </p>

              <p style="margin-left:20px; float:left;">
                <span >
                  <%= password_field_tag("session[password]", "", :placeholder => "Password",:class=>"field") %>
                </span><br />
                  <%= submit_tag("LOG  IN", :class => "login-button") %>
              </p>
            <% end %>

            <span class="login-tip" >
              <span ><a>Forgot Password?</a>
              </span> <em > &nbsp;or</em> 
              <span><a id="register">Not Register?</a>
              </span>
            </span>
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            </div>	
       </div>

      <div class="signup">
          <h1>Sign Up</h1>
          <div class="signup-form-wrapper">
              <%= form_tag("/users", :method => "post") do %>
                  <p class="">
                  <%= text_field_tag "user[email]","", :placeholder => "Email",:class=>"field field-email"%>
                  
                  </p>
                    <p  class=" ">
                  <%= text_field_tag "user[name]", "", :placeholder => "Name",:class=>"field field-name"%>
                  
                  </p>
                  <p class=" ">
                  <%= password_field_tag "user[password]","", :placeholder => "Password",:class=>"field field-password" %>
                 
                  </p>
                  <p class=" ">
                  <%= password_field_tag "user[password_confirmation]", "", :placeholder => "Password Confirmation",:class=>"field field-password "%>
                  </p>
                  <div class="erron-alert"> 
                    <ul>
                     <li >1/the email had been used!</li>
                     <li>2/please keep the password the same!
                    </li>
                    </ul></div>
                    <%= submit_tag "Submit", class: "signup-button" %>
                
              <% end %>
          </div>
      </div>

  </div>
</div>
